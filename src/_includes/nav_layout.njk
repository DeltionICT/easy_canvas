{% extends "page.njk" %}

{% block layout %}
    <main>
        <h1 id="top">{{ course_title }}</h1>
        {{ content | safe }}
        <div id="leerdoelen_wrapper">
            {% for p in collections[tags] | postsAscending %}
                {% if p.url==page.url %}
                    {% for l in p.data.leerdoelen %}
                        <details>
                            <summary><a>{{ l.titel }}</a></summary>
                            <ul>
                            {% for i in l.items %}
                                <li>{{ i }}</li>
                            {% endfor %}
                            </ul>
                        </details>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </div>
    </main>
    <aside id="inhoudsopgave">
            <span><b>Inhoudsopgave</b></span>
        {{ content | toc | safe }}
    </aside>
    <a href="#" id="panel-in" class="klapper" onclick="showPanel()"><img eleventy:ignore src="/_assets/2pijltjes_f58220.svg" alt="inklappen"></a>
    <a href="#" id="panel-out" class="klapper" onclick="hidePanel()"><img eleventy:ignore src="/_assets/2pijltjes_f58220.svg" alt="uitklappen"></a>

{% endblock %}

